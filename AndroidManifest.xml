<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.test"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.baumarkt.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.test.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.baumarkt.StartPoint"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.baumarkt.Search"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.test.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.baumarkt.Einkaufsliste"
            android:description="@string/title_activity_einkaufsliste"
            android:label="@string/title_activity_einkaufsliste"
            android:screenOrientation="sensor"
            android:theme="@style/AppBaseTheme" >
            <intent-filter>
                <action android:name="com.example.test.EINKAUFSLISTE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.baumarkt.MapActitivity"
            android:label="@string/headline_map" android:description="@string/headline_map">
            <intent-filter>
                <action android:name="com.example.test.MAP" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>